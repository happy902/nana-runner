@form{
    id=simple
    div="vert"
    @label{
        id=label
        caption="Hello, label!"
        div="weight=20"
        align=left
    }
    @textbox{
        id=textbox
        caption="Hello, textbox!"
        typeface={ Courier New 12 }
    }
    @button{
        id=close
        div="weight=30"
        bgcolor=yellow
        typeface={ bold }
        _click=close
    }
}
